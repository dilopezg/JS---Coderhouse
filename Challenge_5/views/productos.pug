include layout.pug

  body.container.bg-light
    header
      ul.nav.nav-tabs
        li.nav-item
          a.nav-link(aria-current='page', href='/api/productos') Formulario
        |       
        li.nav-item
          a.nav-link(href='/api/productos_list') Productos

    h2.text-danger.mt-4 Productos cargados
    if productos_list.length == 0
        h5.alert-danger.rounded.p-2 No hay productos cargados
    else     
        table.table
            thead
                th(scope='col') #     
                th(scope='col') TÃ­tulo
                th(scope='col') Precio
                th(scope='col') Imagen  
            each producto in productos_list 
                tbody
                    th(scope='row')= producto.Id         
                    td= producto.title        
                    td= producto.price      
                    td.align-middle
                            img(src=producto.thumbnail alt=producto.title width=50 height=50)

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js', integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p', crossorigin='anonymous')