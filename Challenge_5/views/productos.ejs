<!DOCTYPE html>
<html lang="en"></html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />  
</head>
<body class="container">
  <header>
    <ul class="nav nav-tabs">
      <li class="mt-3">
        <a class="nav-link" aria-current="page" href="/api/productos">Formulario</a>
      </li>
      <li class="mt-3">
        <a class="nav-link" href="/api/productos_list">Productos</a>
      </li>
    </ul>
  </header>
<body class="p-4">
  <section class="p-4 bg-secondary">
      <h2 class="text-primary">Vista de Productos</h2>
      <% if (productos_list.length===0) { %>
          <h2 class="bg-light p-4 text-danger">No hay productos</h2>
          <% } else { %>
              <table class="table table-dark">
                  <thead>
                      <tr>
                          <th>ID</th>
                          <th>Title</th>
                          <th>Price</th>
                          <th>Imagen</th>
                      </tr>
                  </thead>
                  <tbody>
                      <% productos_list.forEach(producto=> { %>
                          <tr class="text-center">
                              <td class="align-middle">
                                <%= producto.Id%>
                              </td>
                              <td class="align-middle">
                                  <%= producto.title%>
                              </td>
                              <td class="align-middle">
                                  <%= producto.price %>
                              </td>
                              <td class="align-middle">
                                  <img src="<%= producto.thumbnail %>" alt="<%= producto.title %>" width="<%=50%>" height="<%=50%>">
                              </td>
                          </tr>
                          <% }) %>
                  </tbody>
              </table>
              <% } %>                  
  </section>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
    crossorigin="anonymous"
  ></script>
</body>
</html>

